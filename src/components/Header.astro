---
interface Props {
	logo: string;
  blogLink: string;
  contactLink: string;
}

const {  logo, blogLink, contactLink  } = Astro.props;
---

<header>
    <nav>
      <h2 class="logo">
        <a href="#">{logo}</a>
      </h2>
      <ul class="nav-links">
        <li>
          <a href={blogLink}>Blog</a>
      </li>
        <li>
          <a href={contactLink} class="btn">Contact</a>
        </li>
        <li>
          <a id="toggleTheme">
            <span>Dark</span>
          </a>
        </li>
      </ul>

      <!-- burger menu-->
      <div class="burger" id="burgerMenu">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
      </div>
    </nav>
</header>